
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.example.board.Mapper.CommentMapper">

    <!--등록 -->
    <insert id="insertCommetn" parameterType="org.example.board.DTO.CommentDTO" >
        insert into comment(board_id,user_name,content,created)
        values(#{boardId}, #{userName}, #{content}, now());
    </insert>

    <!-- 삭제 -->
    <delete id="deleteComment" parameterType="int">
        delete from comment where comment_id = #{commentId}
    </delete>
</mapper>